---
import Action from "@/components/Action.astro";

interface Props {
  data: {
    title: string;
    subTitle: string;
    primaryCta: string;
    secondaryCta: string;
    highlightedTitle?: string;
  };
}

const { data } = Astro.props;
---

<section id="hero-section" class="flex justify-center mt-48 min-h-screen">
  <div class="md:w-3/4">
    <h1 class="text-4xl text-center font-semibold md:text-6xl">
      {data.title}
      <span class="text-primary"> {data.highlightedTitle} </span>
    </h1>
    <h2 class="mt-10 text-lg text-center opacity-80 md:text-2xl">
      {data.subTitle}
    </h2>
    <div class="flex justify-evenly mt-10">
      <Action
        as="a"
        type="button"
        class="bg-black text-white"
        href="mailto:nnegoita273@gmail.com"
        target="_blank"
      >
        {data.primaryCta}
      </Action>
    </div>
    <div class="flex justify-center">
    </div>
  </div>
</section>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  #hero-section {
    opacity: 0;
    animation: fadeIn 0.8s ease-in-out forwards;
  }
</style>
